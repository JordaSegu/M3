//
function DibujarLetra(letra,num){
    var frase="";
    for(var i=num;i>0;i--){
        frase=frase+letra;
    }
    console.log(frase);
}
function DibujarPiramide(letra,veces){
    for(var j=veces;j>0;j--){
        DibujarLetra(letra, j);
    }
}

DibujarPiramide("b",5);

bbbbb
bbbb
bbb
bb
