//
function DibujarLetra(letra,num){
    var frase="";
    for(var i=num;i>0;i--){
        frase=frase+letra;
    }
    console.log(frase);
}
function DibujarPiramide(letra,veces){
    for(var i=1;i<veces;i++){
        DibujarLetra(letra, i);
    }
    for(var i=veces;i>0;i--){
        DibujarLetra(letra, i);
    }
}
DibujarPiramide("b",5);

b
bb
bbb
bbbb
bbbbb
bbbb
bbb
bb
b

//
function mayorEdad(edad){
    if (edad>=18){
        return true;
    } else {
        return false;
    }
}
var edades=[29,17,62,28,70];
var mayoresArr=[];
var menoresArr=[];
for (var i=0;i<edades.length;i++){
    if(mayorEdad(edades[i])==true){
        mayoresArr.push(edades[i]);
    }else{
        menoresArr.push(edades[i]);
    }
}
console.log(mayoresArr);
console.log(menoresArr);

[ 29, 62, 28, 70 ]
[ 17 ]

