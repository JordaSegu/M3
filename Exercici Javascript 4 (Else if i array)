//
var a1=[7, 14, 21, 28, 35, 42, 49, 56, 63, 70];
var a2=[3, 6, 9, 12, 15, 18, 21, 24, 27, 30];
var a3=[];
var i=0;
var j=a1.length-1
while(i<10){
    a3.push(a1[i]+a2[j]);
    i++;
    j--;
}
console.log(a3)

