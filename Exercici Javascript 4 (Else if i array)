//
var a1=[7, 14, 21, 28, 35, 42, 49, 56, 63, 70];
var a2=[3, 6, 9, 12, 15, 18, 21, 24, 27, 30];
var a3=[0];
var i=0;
var max=a1.length;
while(i<max){
    a3.push(a1[i]+a2[i]);
    i++;
    }
console.log(a3);

