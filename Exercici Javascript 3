//Hacer una piramide lateral

var Texto="a";
for(var i=0; i<11; i++){
  if (i<5){
      console.log(Texto);
      Texto=Texto+"a";
  } else {
    console.log(Texto);
    Texto=Texto.slice(0,-1);}
}

a
aa
aaa
aaaa
aaaaa
